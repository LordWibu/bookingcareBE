<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
    <style>
        table {
            font-family: Arial;
            font-size: 12px;
            text-align: left;
            border: 1px solid white;
            width: 100%;
        }

        th {
            text-align: center;
        }

        th,
        td {
            border: 1px solid white;
            height: 36px;
        }

        .btn-edit {
            outline: none;
            background-color: orange;
            border-radius: 3px;
            cursor: pointer;
            text-decoration: none;
            padding: 6px 14px;
            color: aliceblue;
        }

        .btn-delete {
            outline: none;
            background-color: #ff0023;
            border-radius: 3px;
            cursor: pointer;
            text-decoration: none;
            padding: 6px 14px;
            color: aliceblue;
        }

        .btn-create {
            font-size: 14px;
            border-radius: 3px;
            cursor: pointer;
            padding: 6px 14px;
            color: rgb(50, 136, 212);
            font-family: Arial;
            display: block;
            margin-bottom: 10px;
        }
    </style>
</head>

<body>
    <a href="/crud" type="button" class="btn-create">Create New</a>
    <table>

        <thead>
            <tr>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Address</th>
                <th>PhoneNumber</th>
                <th>Gender</th>
                <th>RoleID</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% for(let i=0; i < dataTable.length; i++ ) { %>
                <tr>
                    <td>
                        <%= dataTable[i].email %>
                    </td>
                    <td>
                        <%= dataTable[i].firstName %>
                    </td>
                    <td>
                        <%= dataTable[i].lastName %>
                    </td>
                    <td>
                        <%= dataTable[i].address %>
                    </td>
                    <td>
                        <%= dataTable[i].phonenumber %>
                    </td>
                    <td>
                        <%= dataTable[i].gender%>
                    </td>
                    <td>
                        <%= dataTable[i].roleId %>
                    </td>
                    <td>
                        <a href="/edit-crud?id=<%= dataTable[i].id %>" type="button" class="btn-edit">Edit</a>
                        <a href="/delete-crud?id=<%= dataTable[i].id %>" type="button" class="btn-delete">Delete</a>
                    </td>
                </tr>
                <% } %>
        </tbody>
    </table>

</body>

</html>